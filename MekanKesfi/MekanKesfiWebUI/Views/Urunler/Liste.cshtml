@model MekanKesfiWebUI.Models.UrunlerViewModel

@{
    ViewData["Title"] = "Liste";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <div class="row">
        @foreach (var item in Model.UrunListe)
        {

            <div class="col-md-6">
                <h2 class="mt-3 pt-3">@item.UrunAd</h2>
                <div class="card mb-4 shadow-sm">
                    <img class="card-img-top"
                         src="@item.UrunFoto" style="height: 225px; width: 100%" alt="Card image cap">
                    <div class="card-body">

                        <p class="card-text">@item.UrunFiyat</p>

                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a class="btn btn-sm btn-outline-secondary" asp-controller="Urunler" asp-action="UrunDetay" asp-route-urunId="@item.UrunId">Detay</a>
                            </div>
                            <small class="text-muted col-6" style="text-align:right">@item.IlceAd / @item.IlAd</small>
                            <small class="text-muted col-md-6">@item.MekanAd</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>